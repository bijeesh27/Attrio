<%- include('../partials/admin/header') %>

<style>
  /* Base button styles */
  button {
    padding: 8px 16px; /* Add padding for better spacing */
    border: none; /* Remove default border */
    border-radius: 4px; /* Add rounded corners */
    cursor: pointer; /* Change cursor to pointer on hover */
    font-size: 14px; /* Set font size */
    color: white; /* Set text color to white for better contrast */
    transition: background-color 0.3s ease; /* Smooth transition for background color */
  }

  /* Blocked state (red background) */
  .blocked {
    background-color: #ff4d4d; /* Light red */
  }

  .blocked:hover {
    background-color: #cc0000; /* Darker red on hover */
  }

  /* Unblocked state (green background) */
  .unblocked {
    background-color: #4caf50; /* Light green */
  }

  .unblocked:hover {
    background-color: #45a049; /* Darker green on hover */
  }

  .outline {
    background-color: transparent;
    border: 2px solid;
  }

  .outline.blocked {
    border-color: #ff4d4d;
    color: #ff4d4d;
  }

  .outline.unblocked {
    border-color: #4caf50;
    color: #4caf50;
  }
  button:disabled {
    background-color: #cccccc;
    cursor: not-allowed;
  }
  
  /* Compact Search component styles */
  .search-container {
    position: relative;
    margin-bottom: 20px;
    max-width: 400px;
  }
  
  .search-form {
    display: flex;
    align-items: center;
  }
  
  .search-input-wrapper {
    position: relative;
    flex-grow: 1;
  }
  
  .search-input {
    width: 100%;
    padding: 8px 35px 8px 35px;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 14px;
    transition: all 0.3s;
    outline: none;
    height: 38px;
  }
  
  .search-input:focus {
    border-color: #556ee6;
    box-shadow: 0 0 0 2px rgba(85, 110, 230, 0.1);
  }
  
  .search-icon {
    position: absolute;
    left: 10px;
    top: 50%;
    transform: translateY(-50%);
    color: #6c757d;
    font-size: 16px;
    pointer-events: none;
  }
  
  .cancel-icon {
    position: absolute;
    right: 10px;
    top: 50%;
    transform: translateY(-50%);
    color: #6c757d;
    font-size: 16px;
    cursor: pointer;
    display: none;
  }
  
  .search-input:not(:placeholder-shown) ~ .cancel-icon {
    display: block;
  }
  
  .search-button {
    margin-left: 8px;
    padding: 8px 15px;
    background-color: #556ee6;
    color: white;
    border: none;
    border-radius: 4px;
    font-size: 14px;
    cursor: pointer;
    transition: background-color 0.3s;
    height: 38px;
  }
  
  .search-button:hover {
    background-color: #4458b8;
  }
</style>

<div class="main-content">
  <div class="page-content">
    <div class="container-fluid">
      <!-- Start page title -->
      <div class="row">
        <div class="col-12">
          <div
            class="page-title-box d-sm-flex align-items-center justify-content-between"
          >
            <h4 class="mb-sm-0 font-size-18">Categories</h4>

            <div class="page-title-right">
              <ol class="breadcrumb m-0">
                <li class="breadcrumb-item">
                  <a href="javascript: void(0);">Ecommerce</a>
                </li>
                <li class="breadcrumb-item active">Categories</li>
              </ol>
            </div>
          </div>
        </div>
      </div>
      <!-- End page title -->
      
      <!-- New Compact Search Component -->
      <div class="row mb-3">
        <div class="col-sm-12 col-md-6">
          <div class="search-container">
            <form action="/admin/categorysearch" method="GET" class="search-form" id="searchForm">
              <div class="search-input-wrapper">
                <i class="bx bx-search search-icon"></i>
                <input
                  type="text"
                  class="search-input form-control"
                  id="searchUserInput"
                  placeholder="Search by name..."
                  name="query"
                  value="<%= searchQuery %>"
                />
                <i class="bx bx-x cancel-icon" onclick="clearSearch()"></i>
              </div>
              <button type="submit" class="search-button">
                Search
              </button>
            </form>
          </div>
        </div>
        <div class="col-sm-12 col-md-6">
          <div class="text-sm-end">
            <a href="/admin/add-category">
              <button
                type="button"
                class="btn btn-success btn-rounded waves-effect waves-light mb-2 me-2"
              >
                <i class="mdi mdi-plus me-1"></i> Add New Category
              </button>
            </a>
          </div>
        </div>
      </div>
      
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-body">
              <!-- Categories Table -->
              <div class="table-responsive">
                <table
                  class="user-table table align-middle table-nowrap dt-responsive nowrap w-100"
                  id="categoryList-table"
                >
                  <thead class="table-light">
                    <tr>
                      <th>SL.No</th>
                      <th>Category</th>
                      <th>Description</th>
                      <th>Status</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if (categories && categories.length > 0) { %>
                    <% categories.forEach((categories,index) => { %>
                    <tr>
                      <td><%= index+1 %></td>
                      <td><%= categories.name %></td>
                      <td><%= categories.description %></td>
                      <td><%= categories.status?"Active" : "Inactive" %></td>
                      <td>
                        <a href="/admin/editCategory/<%= categories.id %>">
                          <button
                            class="btn btn-edit btn-success btn-sm waves-effect waves-light"
                          >
                            Edit
                          </button>
                        </a>
                        <button
                          onclick="confirmBlock('<%= categories.id %>')"
                          class="<%= categories.status ?'btn btn-danger btn-sm waves-effect waves-light': 'btn btn-success btn-sm waves-effect waves-light'%>"
                        >
                          <%= categories.status?"block":"unblock" %>
                        </button>
                      </td>
                    </tr>
                    <% }) %>
                    <% } else { %>
                      <tr>
                        <td colspan="6" class="text-center">No category found</td>
                      </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
              <!-- End Table -->
              <!-- Add this at the bottom of your categories table, before the end of card-body div -->
              <div class="row mt-4">
                <div class="col-12">
                  <nav aria-label="User pagination">
                    <ul class="pagination pagination-rounded justify-content-center">
                      <!-- Previous page button -->
                      <li class="page-item <%= pagination.currentPage === 1 ? 'disabled' : '' %>">
                        <a class="page-link" href="/admin/categories=<%= pagination.currentPage - 1 %>&query=<%= searchQuery %>" tabindex="-1">
                          <i class="mdi mdi-chevron-left"></i>
                        </a>
                      </li>
                      
                      <!-- Page numbers -->
                      <% pages.forEach(pageNum => { %>
                        <li class="page-item <%= pagination.currentPage === pageNum ? 'active' : '' %>">
                          <a class="page-link" href="/admin/categories?page=<%= pageNum %>&query=<%= searchQuery %>"><%= pageNum %></a>
                        </li>
                      <% }) %>
                      
                      <!-- Next page button -->
                      <li class="page-item <%= pagination.currentPage === pagination.totalPages ? 'disabled' : '' %>">
                        <a class="page-link" href="/admin/categories?page=<%= pagination.currentPage + 1 %>&query=<%= searchQuery %>">
                          <i class="mdi mdi-chevron-right"></i>
                        </a>
                      </li>
                    </ul>
                  </nav>
                </div>
              </div>
            </div>
            <!-- End Card Body -->
          </div>
          <!-- End Card -->
        </div>
        <!-- End Col -->
      </div>
      <!-- End Row -->
    </div>
    <!-- End Container Fluid -->
  </div>
  <!-- End Page Content -->
</div>
<!-- End Main Content -->
<script>
  function confirmBlock(categoryId) {
    Swal.fire({
      title: `Are you sure?`,
      text: ` Do you want to continue?`,
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#000000",
      cancelButtonColor: "#d33",
      confirmButtonText: "Yes",
      cancelButtonText: "No",
    }).then((result) => {
      if (result.isConfirmed) {
        window.location.href = ` /admin/blockCategory/${categoryId}`;
      }
    });
  }

  function searchUser() {
    console.log("searching use");
    let input = document
      .getElementById("searchUserInput")
      .value.toLowerCase();
    let rows = document.querySelectorAll(".user-table tbody tr");
    rows.forEach((row) => {
      let email = row
        .querySelector("td:nth-child(2)")
        .textContent.toLowerCase();
      if (email.includes(input)) {
        row.style.display = "";
      } else {
        row.style.display = "none";
      }
    });
  }
  
  function clearSearch() {
    document.getElementById('searchUserInput').value = '';
    // Redirect to main categories page to show all products
    window.location.href = '/admin/categories';
  }
</script>

<%- include('../partials/admin/footer') %>