<%- include('../partials/admin/header') %>

<body data-sidebar="dark">
  <div class="main-content">
    <div class="page-content">
      <div class="container-fluid">
        <!-- Start page title -->
        <div class="row">
          <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
              <h4 class="mb-sm-0 font-size-18">Products</h4>

              <div class="page-title-right">
                <ol class="breadcrumb m-0">
                  <li class="breadcrumb-item"><a href="javascript: void(0);">Ecommerce</a></li>
                  <li class="breadcrumb-item active">Products</li>
                </ol>
              </div>
            </div>
          </div>
        </div>
        <!-- End page title -->

        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-body">
                <!-- Add New Product Button -->
                <div class="row mb-2">
                  <div class="col-sm-12">
                    <div class="text-sm-end">
                      <a href="/admin/add-product">
                        <button type="button" class="btn btn-success btn-rounded waves-effect waves-light mb-2 me-2" data-bs-toggle="modal" data-bs-target="#addProductModal">
                          <i class="mdi mdi-plus me-1"></i> Add New Product
                        </button>
                      </a>
                    </div>
                  </div>
                </div>

                <!-- Products Table -->
                <div class="table-responsive">
                  <table class="table align-middle table-nowrap dt-responsive nowrap w-100" id="productList-table">
                    <thead class="table-light">
                      <tr>
                        <th>SL.No</th>
                        <th>Product Name</th>
                        <th>Image</th>
                        <th>Description</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Stock</th>
                        <th>Status</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      <!-- Example Data -->
                      <tr>
                        <td>1</td>
                        <td>Half Sleeve T-Shirt</td>
                        <td>
                          <img src="/admin/assets/images/product/img-1.png" alt="Product Image" class="img-thumbnail" width="50">
                        </td>
                        <td>Comfortable and stylish half-sleeve T-shirt</td>
                        <td>T-shirts</td>
                        <td>$25.00</td>
                        <td>100</td>
                        <td>
                          <span class="badge bg-success">Active</span>
                        </td>
                        <td>
                          <button type="button" class="btn btn-danger btn-sm waves-effect waves-light">
                            <i class="mdi mdi-block-helper"></i> Block
                          </button>
                        </td>
                      </tr>
                      <tr>
                        <td>2</td>
                        <td>Light Blue T-Shirt</td>
                        <td>
                          <img src="/admin/assets/images/product/img-2.png" alt="Product Image" class="img-thumbnail" width="50">
                        </td>
                        <td>Light blue cotton T-shirt</td>
                        <td>T-shirts</td>
                        <td>$20.00</td>
                        <td>50</td>
                        <td>
                          <span class="badge bg-danger">Inactive</span>
                        </td>
                        <td>
                          <button type="button" class="btn btn-success btn-sm waves-effect waves-light">
                            <i class="mdi mdi-check"></i> Unblock
                          </button>
                        </td>
                      </tr>
                      <tr>
                        <td>3</td>
                        <td>Black Hoodie</td>
                        <td>
                          <img src="/admin/assets/images/product/img-3.png" alt="Product Image" class="img-thumbnail" width="50">
                        </td>
                        <td>Warm and cozy black hoodie</td>
                        <td>Hoodies</td>
                        <td>$45.00</td>
                        <td>75</td>
                        <td>
                          <span class="badge bg-success">Active</span>
                        </td>
                        <td>
                          <button type="button" class="btn btn-danger btn-sm waves-effect waves-light">
                            <i class="mdi mdi-block-helper"></i> Block
                          </button>
                        </td>
                      </tr>
                    </tbody>
                  </table>
                </div>
                <!-- End Table -->
              </div>
              <!-- End Card Body -->
            </div>
            <!-- End Card -->
          </div>
          <!-- End Col -->
        </div>
        <!-- End Row -->
      </div>
      <!-- End Container Fluid -->
    </div>
    <!-- End Page Content -->
  </div>
  <!-- End Main Content -->

 

  <%- include('../partials/admin/footer') %>
</body>