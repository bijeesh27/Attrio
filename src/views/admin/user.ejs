<%- include('../partials/admin/header') %>

<style>
  /* Compact Search component styles */
  .search-container {
    position: relative;
    margin-bottom: 20px;
    max-width: 400px;
  }
  
  .search-form {
    display: flex;
    align-items: center;
  }
  
  .search-input-wrapper {
    position: relative;
    flex-grow: 1;
  }
  
  .search-input {
    width: 100%;
    padding: 8px 35px 8px 35px;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 14px;
    transition: all 0.3s;
    outline: none;
    height: 38px;
  }
  
  .search-input:focus {
    border-color: #556ee6;
    box-shadow: 0 0 0 2px rgba(85, 110, 230, 0.1);
  }
  
  .search-icon {
    position: absolute;
    left: 10px;
    top: 50%;
    transform: translateY(-50%);
    color: #6c757d;
    font-size: 16px;
    pointer-events: none;
  }
  
  .cancel-icon {
    position: absolute;
    right: 10px;
    top: 50%;
    transform: translateY(-50%);
    color: #6c757d;
    font-size: 16px;
    cursor: pointer;
    display: none;
  }
  
  .search-input:not(:placeholder-shown) ~ .cancel-icon {
    display: block;
  }
  
  .search-button {
    margin-left: 8px;
    padding: 8px 15px;
    background-color: #556ee6;
    color: white;
    border: none;
    border-radius: 4px;
    font-size: 14px;
    cursor: pointer;
    transition: background-color 0.3s;
    height: 38px;
  }
  
  .search-button:hover {
    background-color: #4458b8;
  }
</style>

<body data-sidebar="dark">
  <div class="main-content">
    <div class="page-content">
      <div class="container-fluid">
        <!-- Page Title -->
        <div class="row">
          <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
              <h4 class="mb-sm-0 font-size-18">Customers</h4>
              <div class="page-title-right">
                <ol class="breadcrumb m-0">
                  <li class="breadcrumb-item"><a href="javascript: void(0);">Ecommerce</a></li>
                  <li class="breadcrumb-item active">Customers</li>
                </ol>
              </div>
            </div>
          </div>
        </div>

        <!-- New Compact Search Component -->
        <div class="row mb-3">
          <div class="col-sm-12 col-md-6">
            <div class="search-container">
              <form action="/admin/search" method="GET" class="search-form" id="searchForm">
                <div class="search-input-wrapper">
                  <i class="bx bx-search search-icon"></i>
                  <input
                    type="text"
                    class="search-input form-control"
                    id="searchUserInput"
                    placeholder="Search by name..."
                    name="query"
                    value="<%= searchQuery %>"
                  />
                  <i class="bx bx-x cancel-icon" onclick="clearSearch()"></i>
                </div>
                <button type="submit" class="search-button">
                  Search
                </button>
              </form>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-body">
                <!-- User Table -->
                <div class="table-responsive">
                  <table 
                    class="user-table table align-middle table-nowrap dt-responsive nowrap w-100" 
                    id="customerList-table"
                  >
                    <thead class="table-light">
                      <tr>
                        <th>#</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Status</th>
                        <th>Block/Unblock</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% if (users && users.length > 0) { %>
                        <% users.forEach((user, index) => { %>
                        <tr>
                          <td><%= index + 1 %></td>
                          <td><%= user.username %></td>
                          <td><%= user.email %></td>
                          <td><%= user.number %></td>
                          <td><%= user.status ? "Active" : "Inactive" %></td>
                          <td>
                            <button
                              onclick="confirmBlock('<%= user.id %>')"
                              class="<%= user.status ? 'btn btn-danger btn-sm waves-effect waves-light' : 'btn btn-success btn-sm waves-effect waves-light' %>"
                            >
                              <%= user.status ? "Block" : "Unblock" %>
                            </button>
                          </td>
                        </tr>
                        <% }); %>
                      <% } else { %>
                        <tr>
                          <td colspan="6" class="text-center">No users found</td>
                        </tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>

                <!-- Pagination -->
                <div class="row mt-4">
                  <div class="col-12">
                    <nav aria-label="User pagination">
                      <ul class="pagination pagination-rounded justify-content-center">
                        <!-- Previous page button -->
                        <li class="page-item <%= pagination.currentPage === 1 ? 'disabled' : '' %>">
                          <a class="page-link" href="/admin/user?page=<%= pagination.currentPage - 1 %>&query=<%= searchQuery %>" tabindex="-1">
                            <i class="mdi mdi-chevron-left"></i>
                          </a>
                        </li>
                        
                        <!-- Page numbers -->
                        <% pages.forEach(pageNum => { %>
                          <li class="page-item <%= pagination.currentPage === pageNum ? 'active' : '' %>">
                            <a class="page-link" href="/admin/user?page=<%= pageNum %>&query=<%= searchQuery %>"><%= pageNum %></a>
                          </li>
                        <% }) %>
                        
                        <!-- Next page button -->
                        <li class="page-item <%= pagination.currentPage === pagination.totalPages ? 'disabled' : '' %>">
                          <a class="page-link" href="/admin/user?page=<%= pagination.currentPage + 1 %>&query=<%= searchQuery %>">
                            <i class="mdi mdi-chevron-right"></i>
                          </a>
                        </li>
                      </ul>
                    </nav>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script>
      function confirmBlock(userId) {
        Swal.fire({
          title: "Are you sure?",
          text: "Do you want to continue?",
          icon: "warning",
          showCancelButton: true,
          confirmButtonColor: "#000000",
          cancelButtonColor: "#d33",
          confirmButtonText: "Yes",
          cancelButtonText: "No",
        }).then((result) => {
          if (result.isConfirmed) {
            window.location.href = `/admin/block/${userId}`;
          }
        });
      }

      function clearSearch() {
        document.getElementById('searchUserInput').value = '';
        // Redirect to main users page to show all users
        window.location.href = '/admin/user';
      }

      // Show cancel icon when input has text
      document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.getElementById('searchUserInput');
        const cancelIcon = document.querySelector('.cancel-icon');
        
        // Check if there's initial value
        if (searchInput.value.length > 0) {
          cancelIcon.style.display = 'block';
        }
        
        // Add event listener to handle input changes
        searchInput.addEventListener('input', function() {
          if (this.value.length > 0) {
            cancelIcon.style.display = 'block';
          } else {
            cancelIcon.style.display = 'none';
          }
        });
      });
    </script>

    <%- include('../partials/admin/footer') %>
  </div>
</body>
</html>