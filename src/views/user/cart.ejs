<script>
function updateQuantity(productId, size, change) {
  const quantityInput = document.getElementById(`quantity-${productId}-${size}`);
  let quantity = parseInt(quantityInput.value) + change;
  
  // Ensure quantity is at least 1
  if (quantity < 1) {
    quantity = 1;
  }
  
  // Update input value
  quantityInput.value = quantity;
  
  // Send AJAX request to update cart
  fetch('/cart/update', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
    },
    body: JSON.stringify({
      productId: productId,
      size: size,
      quantity: quantity
    })
  })
  .then(response => response.json())
  .then(data => {
    if (data.success) {
      // Update the total price for the item
      const totalElement = document.getElementById(`total-${productId}-${size}`);
      totalElement.textContent = `Rs.${data.itemTotal.toLocaleString()}`;
      
      // Update the cart total
      const cartTotalElement = document.querySelector('.summary-item.total .value');
      cartTotalElement.textContent = `Rs.${data.cartTotal.toLocaleString()}`;
    } else {
      alert('Failed to update quantity. Please try again.');
    }
  })
  .catch(error => {
    console.error('Error:', error);
    alert('An error occurred. Please try again.');
  });
}

function removeItem(productId, size) {
  Swal.fire({
    title: `Are you sure?`,
    text: `Do you want to remove this product from cart?`,
    icon: "warning",
    showCancelButton: true,
    confirmButtonColor: "#000000",
    cancelButtonColor: "#d33",
    confirmButtonText: "Remove",
    cancelButtonText: "Cancel",
  }).then((result) => {
    if (result.isConfirmed) {
      fetch(`/removeItem/${productId}/${size}`, {
        method: 'get',
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          location.reload();
        } else {
          alert('Failed to remove item. Please try again.');
        }
      })
      .catch(error => {
        console.error('Error:', error);
        alert('An error occurred. Please try again.');
      });
    }
  });
}

function clearCart() {
  Swal.fire({
    title: `Are you sure?`,
    text: `Do you want to clear the cart?`,
    icon: "warning",
    showCancelButton: true,
    confirmButtonColor: "#000000",
    cancelButtonColor: "#d33",
    confirmButtonText: "Clear",
    cancelButtonText: "Cancel",
  }).then((result) => {
    if (result.isConfirmed) {
      fetch('/clearcart', {
        method: 'get',
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          location.reload();
        } else {
          alert('Failed to clear cart. Please try again.');
        }
      })
      .catch(error => {
        console.error('Error:', error);
        alert('An error occurred. Please try again.');
      });
    }
  });
}
</script>

