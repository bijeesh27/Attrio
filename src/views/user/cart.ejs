<!-- Start Cart Area -->
<section class="cart-area ptb-100">
  <div class="container">
    <div class="row">
      <!-- Main Cart Column -->
      <div class="col-lg-8 col-md-12">
        <form>
          <div class="cart-table-container">
            <div class="cart-header">
              <h3><i class='bx bx-cart'></i> Your Shopping Cart</h3>
              <p class="items-count">
                <% if (cart && cart.item && cart.item.length > 0) { %>
                  <%= cart.item.length %> item<%= cart.item.length > 1 ? 's' : '' %> in your cart
                <% } else { %>
                  0 items in your cart
                <% } %>
              </p>
            </div>
            
            <div class="cart-table table-responsive">
              <table class="table table-spaced">
                <thead>
                  <tr>
                    <th scope="col" class="sl-col">Sl <br> No </th>
                    <th scope="col" class="product-col">Product</th>
                    <th scope="col" class="price-col">Price</th>
                    <th scope="col" class="quantity-col">Quantity</th>
                    <th scope="col" class="total-col">Total</th>
                    <th scope="col" class="action-col"></th>
                  </tr>
                </thead>

                <tbody>
                  <% if (cart && cart.item && cart.item.length > 0) { %>
                    <% cart.item.forEach((item, index) => { %>
                      <tr class="cart-item animate-item">
                        <td class="sl-col">
                          <span class="sl-number"><%= index + 1 %></span>
                        </td>
                        <td class="product-col">
                          <div class="product-info">
                            <div class="product-image">
                              <a href="/shop-single/<%= item.productId %>">
                                <img src="/<%= item.productId.image[0] %>" alt="<%= item.productId.name %>" class="img-fluid">
                              </a>
                            </div>
                            <div class="product-details">
                              <h4 class="product-title">
                                <a href="/shop-single/<%= item.productId %>"><%= item.productId.name %></a>
                              </h4>
                              <div class="product-meta">
                                <span class="size-badge">Size: <strong><%= item.size %></strong></span>
                                <% if (item.stock == 0) { %>
                                  <span class="stock-badge out-stock">Out of Stock</span>
                                <% } else { %>
                                  <span class="stock-badge in-stock">In Stock</span>
                                <% } %>
                              </div>
                            </div>
                          </div>
                        </td>

                        <td class="price-col">
                          <span class="price">Rs.<%= item.price.toLocaleString() %></span>
                        </td>

                        <td class="quantity-col">
                          <div class="quantity-selector">
                            <button type="button" class="quantity-btn minus-btn" onclick="updateQuantity('<%= item.productId._id %>', '<%= item.size %>', -1)">
                              <i class="bx bx-minus"></i>
                            </button>
                            <input type="text" value="<%= item.quantity %>" id="quantity-<%= item.productId._id %>-<%= item.size %>" min="1" class="quantity-input" readonly>
                            <button type="button" class="quantity-btn plus-btn" onclick="updateQuantity('<%= item.productId._id %>', '<%= item.size %>', 1)">
                              <i class="bx bx-plus"></i>
                            </button>
                          </div>
                        </td>

                        <td class="total-col">
                          <span class="total" id="total-<%= item.productId._id %>-<%= item.size %>">Rs.<%= item.total.toLocaleString() %></span>
                        </td>
                        
                        <td class="action-col">
                          <button type="button" class="remove-btn" onclick="removeItem('<%= item.productId._id %>', '<%= item.size %>')">
                            <i class="bx bx-trash"></i>
                          </button>
                        </td>
                      </tr>
                    <% }); %>
                  <% } else { %>
                    <tr>
                      <td colspan="6">
                        <div class="empty-cart">
                          <div class="empty-cart-icon">
                            <i class="bx bx-cart-alt"></i>
                          </div>
                          <h3>Your cart is empty</h3>
                          <p>Looks like you haven't added anything to your cart yet.</p>
                          <a href="/shop" class="btn-shop-now">
                            <span>Explore Products</span>
                            <i class="bx bx-right-arrow-alt"></i>
                          </a>
                        </div>
                      </td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
            </div>

            <% if (cart && cart.item && cart.item.length > 0) { %>
              <div class="cart-actions">
                <div class="continue-shopping">
                  <a href="/shop" class="btn-continue">
                    <i class="bx bx-chevron-left"></i>
                    <span>Continue Shopping</span>
                  </a>
                </div>

                <div class="update-actions">
                  <button type="button" class="btn-clear" onclick="clearCart()">
                    <i class="bx bx-trash"></i>
                    <span>Clear Cart</span>
                  </button>
                </div>
              </div>
            <% } %>
          </div>
        </form>
      </div>

      <!-- Summary Column -->
      <div class="col-lg-4 col-md-12">
        <div class="cart-summary">
          <div class="summary-header">
            <h3>Order Summary</h3>
          </div>

          <div class="summary-body">
            <div class="summary-item">
              <span class="label">Subtotal</span>
              <span class="value">Rs.<%= cart && cart.cartTotal ? cart.cartTotal.toLocaleString() : 0 %></span>
            </div>
            
            <div class="summary-item">
              <span class="label">Shipping</span>
              <span class="value">
                <% if (cart && cart.cartTotal&& cart.cartTotal > 10000) { %>
                  <span class="free-shipping">Free Shipping</span>
                <% } else { %>
                  Rs.100
                <% } %>
              </span>
            </div>
            
            <div class="summary-divider"></div>
            
            <div class="summary-item total">
              <span class="label">Total</span>
              <span class="value">
                <% if (cart && cart.cartTotal) { %>
                  Rs.<%= (cart.cartTotal > 10000 ? cart.cartTotal : cart.cartTotal + 100).toLocaleString() %>
                <% } else { %>
                  Rs.0
                <% } %>
              </span>
            </div>
          </div>

          <div class="summary-footer">
            <% if (cart && cart.item && cart.item.length > 0) { %>
              <a href="/checkout" class="btn-checkout">
                <span>Proceed to Checkout</span>
                <i class="bx bx-right-arrow-alt"></i>
              </a>
            <% } else { %>
              <a href="/shop" class="btn-shop">
                <span>Shop Now</span>
                <i class="bx bx-shopping-bag"></i>
              </a>
            <% } %>
          </div>
        </div>

        <div class="coupon-section">
          <div class="coupon-header">
            <h3>Apply Coupon</h3>
          </div>

          <div class="coupon-body">
            <p>Enter your coupon code if you have one.</p>
            
            <div class="coupon-form">
              <div class="form-group">
                <div class="coupon-input-wrapper">
                  <i class="bx bx-tag-alt coupon-icon"></i>
                  <input type="text" class="coupon-input" placeholder="Enter coupon code" id="coupon-code">
                </div>
              </div>
              
              <button type="button" class="btn-apply-coupon" onclick="applyCoupon()">
                <span>Apply Coupon</span>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
