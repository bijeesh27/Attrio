  <script>
    document.addEventListener("DOMContentLoaded", function () {
      // Flash message handling
      removeFlashMessage();

      // Quick View functionality
      initQuickView();

      // Initialize other components
      initQuantityButtons();
    });

    // Also handle flash messages on window load (backup)
    window.addEventListener("load", removeFlashMessage);

    // Flash message handling function
    function removeFlashMessage() {
      const flashMessage = document.getElementById("flash-message");
      if (flashMessage) {
        console.log("Flash message found, will remove in 3 seconds");
        setTimeout(() => {
          flashMessage.remove();
          console.log("Flash message removed");
        }, 1500);
      } else {
        console.log("Flash message element not found");
      }
    }

    // Quick View initialization
    function initQuickView() {
      const quickViewBtns = document.querySelectorAll(".quick-view-btn a");
      const quickViewContent = document.getElementById("quickViewContent");

      quickViewBtns.forEach((btn) => {
        btn.addEventListener("click", function (e) {
          e.preventDefault();
          const productId = this.getAttribute("data-product-id");

          // Fetch product details via AJAX
          fetch(`/singleproduct/${productId}`)
            .then((response) => response.json())
            .then((data) => {
              if (data.success) {
                const product = data.product;

                // Create HTML for the quick view modal
                const quickViewHTML = `
