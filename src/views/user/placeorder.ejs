<style>
/* Order Confirmation Styles */
.order-confirmation-box {
  background-color: #ffffff;
  border-radius: 8px;
  box-shadow: 0 5px 30px rgba(0, 0, 0, 0.05);
  padding: 50px;
  text-align: center;
  margin-bottom: 40px;
}

.confirmation-animation {
  margin-bottom: 30px;
}

.checkmark-circle {
  width: 120px;
  height: 120px;
  position: relative;
  display: inline-block;
  vertical-align: top;
}

.checkmark-circle .background {
  width: 120px;
  height: 120px;
  border-radius: 50%;
  background: #f8f9fa;
  position: absolute;
}

.checkmark-circle .checkmark {
  border-radius: 5px;
}

.checkmark-circle .checkmark.draw:after {
  animation-delay: 100ms;
  animation-duration: 1s;
  animation-timing-function: ease;
  animation-name: checkmark;
  transform: scaleX(-1) rotate(135deg);
  animation-fill-mode: forwards;
}

.checkmark-circle .checkmark:after {
  opacity: 0;
  height: 60px;
  width: 30px;
  transform-origin: left top;
  border-right: 8px solid #000;
  border-top: 8px solid #000;
  content: '';
  left: 30px;
  top: 60px;
  position: absolute;
}

@keyframes checkmark {
  0% {
    height: 0;
    width: 0;
    opacity: 1;
  }
  20% {
    height: 0;
    width: 30px;
    opacity: 1;
  }
  40% {
    height: 60px;
    width: 30px;
    opacity: 1;
  }
  100% {
    height: 60px;
    width: 30px;
    opacity: 1;
  }
}

.confirmation-content h2 {
  font-size: 28px;
  margin-bottom: 15px;
  color: #000000;
}

.order-id {
  font-size: 18px;
  margin-bottom: 20px;
  color: #666666;
}

.confirmation-message {
  font-size: 16px;
  margin-bottom: 30px;
  line-height: 1.6;
  color: #555555;
}

.order-summary-card {
  background-color: #f9f9f9;
  border-radius: 8px;
  padding: 25px;
  text-align: left;
  margin-bottom: 30px;
}

.order-summary-card .summary-header {
  margin-bottom: 20px;
}

.order-summary-card .summary-header h3 {
  font-size: 18px;
  margin: 0;
}

.order-details {
  margin-bottom: 20px;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12px;
}

.detail-label {
  font-weight: 500;
  color: #555555;
}

.detail-value {
  text-align: right;
  color: #333333;
}

.summary-divider {
  height: 1px;
  background-color: #e0e0e0;
  margin: 15px 0;
}

.price-summary .summary-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12px;
}

.price-summary .label {
  font-weight: 500;
  color: #555555;
}

.price-summary .value {
  color: #333333;
}

.price-summary .value.discount {
  color: #e74c3c;
}

.free-shipping {
  color: #27ae60;
}

.summary-item.total {
  font-size: 18px;
  font-weight: 600;
  color: #000000;
}

.action-buttons {
  display: flex;
  justify-content: center;
  gap: 20px;
  margin-top: 30px;
}

.btn-continue-shopping, .btn-view-orders {
  display: inline-flex;
  align-items: center;
  padding: 14px 25px;
  border-radius: 30px;
  font-size: 15px;
  font-weight: 600;
  transition: all 0.3s ease;
  text-decoration: none;
}

.btn-continue-shopping {
  background-color: #f8f9fa;
  color: #000000;
  border: 1px solid #e0e0e0;
}

.btn-view-orders {
  background-color: #000000;
  color: #ffffff;
}

.btn-continue-shopping:hover {
  background-color: #f0f0f0;
}

.btn-view-orders:hover {
  background-color: #333333;
}

.btn-continue-shopping i, .btn-view-orders i {
  font-size: 16px;
}

.btn-continue-shopping i {
  margin-right: 8px;
}

.btn-view-orders i {
  margin-left: 8px;
}

@media only screen and (max-width: 768px) {
  .order-confirmation-box {
    padding: 30px 20px;
  }
  
  .action-buttons {
    flex-direction: column;
    gap: 15px;
  }
  
  .btn-continue-shopping, .btn-view-orders {
    width: 100%;
    justify-content: center;
  }
}
</style>

