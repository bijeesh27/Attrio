<!-- Start Order Confirmation Area -->
<section class="order-confirmation-area ptb-100">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="order-confirmation-box">
          <div class="confirmation-animation">
            <div class="checkmark-circle">
              <div class="background"></div>
              <div class="checkmark draw"></div>
            </div>
          </div>
          
          <div class="confirmation-content">
            <h2>Thank You for Your Order!</h2>
            <p class="order-id">Order ID: <strong>#<%= orderNumber %></strong></p>
            <p class="confirmation-message">
              We've received your order and are getting it ready. A confirmation email has been sent to <strong><%= user.email %></strong>.
            </p>
            
            <div class="order-summary-card">
              <div class="summary-header">
                <h3>Order Summary</h3>
              </div>
              
              <div class="summary-body">
                <div class="order-details">
                  <div class="detail-item">
                    <span class="detail-label">Order Date</span>
                    <span class="detail-value"><%= new Date().toLocaleDateString('en-US', {day: 'numeric', month: 'long', year: 'numeric'}) %></span>
                  </div>
                  
                  <div class="detail-item">
                    <span class="detail-label">Payment Method</span>
                    <span class="detail-value"><%= paymentMethod %></span>
                  </div>
                  
                  <div class="detail-item">
                    <span class="detail-label">Shipping Address</span>
                    <span class="detail-value">
                      <%= shippingAddress.name %><br>
                      <%= shippingAddress.street %><br>
                      <%= shippingAddress.city %>, <%= shippingAddress.state %> <%= shippingAddress.zip %><br>
                      <%= shippingAddress.country %>
                    </span>
                  </div>
                </div>
                
                <div class="summary-divider"></div>
                
                <div class="price-summary">
                  <div class="summary-item">
                    <span class="label">Subtotal</span>
                    <span class="value">Rs.<%= subtotal.toLocaleString() %></span>
                  </div>
                  
                  <div class="summary-item">
                    <span class="label">Shipping</span>
                    <span class="value">
                      <% if (subtotal > 10000) { %>
                        <span class="free-shipping">Free Shipping</span>
                      <% } else { %>
                        Rs.100
                      <% } %>
                    </span>
                  </div>
                  
                  <% if (discount > 0) { %>
                    <div class="summary-item">
                      <span class="label">Discount</span>
                      <span class="value discount">-Rs.<%= discount.toLocaleString() %></span>
                    </div>
                  <% } %>
                  
                  <div class="summary-divider"></div>
                  
                  <div class="summary-item total">
                    <span class="label">Total</span>
                    <span class="value">Rs.<%= grandTotal.toLocaleString() %></span>
                  </div>
                </div>
              </div>
            </div>
            
            <div class="action-buttons">
              <a href="/shop" class="btn-continue-shopping">
                <i class="bx bx-shopping-bag"></i>
                <span>Continue Shopping</span>
              </a>
              
              <a href="/orders" class="btn-view-orders">
                <span>View Orders</span>
                <i class="bx bx-list-ul"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- End Order Confirmation Area -->

