<%- include('../partials/user/header') %>
<link rel="stylesheet" href="/user/assets/css/cartstyle.css">

<!-- Start Page Title -->
<div class="page-title-area">
  <div class="container">
    <div class="page-title-content">
      <h2>Order Confirmation</h2>
      <ul>
        <li><a href="/">Home</a></li>
        <li>Order Confirmation</li>
      </ul>
    </div>
  </div>
</div>
<!-- End Page Title -->

<!-- Start Order Confirmation Area -->
<section class="order-confirmation-area ptb-100">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="order-confirmation-box">
          <div class="confirmation-animation">
            <div class="checkmark-circle">
              <div class="background"></div>
              <div class="checkmark draw"></div>
            </div>
          </div>
          
          <div class="confirmation-content">
            <h2>Thank You for Your Order!</h2>
            <p class="order-id">Order ID: <strong>#<%= order.orderNumber %></strong></p>
            <p class="confirmation-message">
              We've received your order and are getting it ready. A confirmation email has been sent to <strong><%= user.email %></strong>.
            </p>
            
      
            
            <div class="action-buttons">
              <a href="/shop" class="btn-continue-shopping">
                <i class="bx bx-shopping-bag"></i>
                <span>Continue Shopping</span>
              </a>
              
              <a href="/orders" class="btn-view-orders">
                <span>View Orders</span>
                <i class="bx bx-list-ul"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- End Order Confirmation Area -->


<style>
/* Order Confirmation Styles */
.order-confirmation-box {
  background-color: #ffffff;
  border-radius: 8px;
  box-shadow: 0 5px 30px rgba(0, 0, 0, 0.05);
  padding: 50px;
  text-align: center;
  margin-bottom: 40px;
}

.confirmation-animation {
  margin-bottom: 30px;
}

.checkmark-circle {
  width: 120px;
  height: 120px;
  position: relative;
  display: inline-block;
  vertical-align: top;
}

.checkmark-circle .background {
  width: 120px;
  height: 120px;
  border-radius: 50%;
  background: #7ac142;
  position: absolute;
  animation: pulse 1s ease-in-out;
}

.checkmark-circle .checkmark {
  border-radius: 5px;
}

.checkmark-circle .checkmark.draw:after {
  animation-delay: 300ms;
  animation-duration: 0.8s;
  animation-timing-function: ease;
  animation-name: checkmark;
  transform: scaleX(-1) rotate(135deg);
  animation-fill-mode: forwards;
}

.checkmark-circle .checkmark:after {
  opacity: 0;
  height: 60px;
  width: 30px;
  transform-origin: left top;
  border-right: 8px solid #ffffff;
  border-top: 8px solid #ffffff;
  content: '';
  left: 30px;
  top: 60px;
  position: absolute;
}

@keyframes checkmark {
  0% {
    height: 0;
    width: 0;
    opacity: 1;
  }
  20% {
    height: 0;
    width: 30px;
    opacity: 1;
  }
  40% {
    height: 60px;
    width: 30px;
    opacity: 1;
  }
  100% {
    height: 60px;
    width: 30px;
    opacity: 1;
  }
}

@keyframes pulse {
  0% {
    transform: scale(0.8);
    opacity: 0;
  }
  50% {
    transform: scale(1.1);
    opacity: 1;
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

.confirmation-content h2 {
  font-size: 28px;
  margin-bottom: 15px;
  color: #000000;
  animation: fadeIn 1s ease-in-out 0.8s forwards;
  opacity: 0;
}

.order-id {
  font-size: 18px;
  margin-bottom: 20px;
  color: #666666;
  animation: fadeIn 1s ease-in-out 1s forwards;
  opacity: 0;
}

.confirmation-message {
  font-size: 16px;
  margin-bottom: 30px;
  line-height: 1.6;
  color: #555555;
  animation: fadeIn 1s ease-in-out 1.2s forwards;
  opacity: 0;
}

@keyframes fadeIn {
  0% {
    opacity: 0;
    transform: translateY(10px);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

.order-summary-card {
  background-color: #f9f9f9;
  border-radius: 8px;
  padding: 25px;
  text-align: left;
  margin-bottom: 30px;
  animation: slideIn 1s ease-in-out 1.4s forwards;
  opacity: 0;
  transform: translateY(20px);
}

@keyframes slideIn {
  0% {
    opacity: 0;
    transform: translateY(20px);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

.order-summary-card .summary-header {
  margin-bottom: 20px;
}

.order-summary-card .summary-header h3 {
  font-size: 18px;
  margin: 0;
}

.order-details {
  margin-bottom: 20px;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12px;
}

.detail-label {
  font-weight: 500;
  color: #555555;
}

.detail-value {
  text-align: right;
  color: #333333;
}

.action-buttons {
  display: flex;
  justify-content: center;
  gap: 20px;
  margin-top: 30px;
  animation: fadeIn 1s ease-in-out 1.6s forwards;
  opacity: 0;
}

.btn-continue-shopping, .btn-view-orders {
  display: inline-flex;
  align-items: center;
  padding: 14px 25px;
  border-radius: 30px;
  font-size: 15px;
  font-weight: 600;
  transition: all 0.3s ease;
  text-decoration: none;
}

.btn-continue-shopping {
  background-color: #f8f9fa;
  color: #000000;
  border: 1px solid #e0e0e0;
}

.btn-view-orders {
  background-color: #000000;
  color: #ffffff;
}

.btn-continue-shopping:hover {
  background-color: #f0f0f0;
}

.btn-view-orders:hover {
  background-color: #333333;
}

.btn-continue-shopping i, .btn-view-orders i {
  font-size: 16px;
}

.btn-continue-shopping i {
  margin-right: 8px;
}

.btn-view-orders i {
  margin-left: 8px;
}

@media only screen and (max-width: 768px) {
  .order-confirmation-box {
    padding: 30px 20px;
  }
  
  .action-buttons {
    flex-direction: column;
    gap: 15px;
  }
  
  .btn-continue-shopping, .btn-view-orders {
    width: 100%;
    justify-content: center;
  }
}
</style>

<%- include('../partials/user/footer') %>