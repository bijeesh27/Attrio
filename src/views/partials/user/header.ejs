        <!-- Loading Animation JavaScript -->
        <script>
document.addEventListener('DOMContentLoaded', function() {
        // Get all nav links
        const navLinks = document.querySelectorAll('.navbar-nav .nav-link');
        
        // Set active class based on current URL when page loads
        const currentPath = window.location.pathname;
        navLinks.forEach(link => {
            if (link.getAttribute('href') === currentPath) {
                link.classList.add('active');
            } else {
                link.classList.remove('active');
            }
        });
        
        // Add click event listeners to each link
        navLinks.forEach(link => {
            link.addEventListener('click', function() {
                // Remove active class from all links
                navLinks.forEach(l => l.classList.remove('active'));
                
                // Add active class to clicked link
                this.classList.add('active');
            });
        });

        // Header search functionality
        const searchBtns = document.querySelectorAll('.search-container button');
        const searchInputs = document.querySelectorAll('.header-search-input');
        const clearBtns = document.querySelectorAll('.search-clear-icon');
        
        // Setup each search input
        searchInputs.forEach((input, index) => {
            const btn = searchBtns[index];
            const clearBtn = clearBtns[index];
            
            // Toggle search input visibility
            btn.addEventListener('click', function(e) {
                if (!input.classList.contains('active') && !input.value) {
                    e.preventDefault(); // Prevent form submission when opening
                    input.classList.add('active');
                    input.focus();
                }
            });
            
            // Show clear button when input has text
            input.addEventListener('input', function() {
                if (this.value.length > 0) {
                    clearBtn.style.opacity = '1';
                } else {
                    clearBtn.style.opacity = '0';
                }
            });
            
            // Check if there's initial value
            if (input.value.length > 0) {
                input.classList.add('active');
                clearBtn.style.opacity = '1';
            }
        });
        
        // Hide search inputs when clicking outside
        document.addEventListener('click', function(e) {
            searchInputs.forEach((input, index) => {
                const btn = searchBtns[index];
                const clearBtn = clearBtns[index];
                
                if (!input.contains(e.target) && !btn.contains(e.target) && !clearBtn.contains(e.target)) {
                    if (input.value.length === 0) {
                        input.classList.remove('active');
                    }
                }
            });
        });
    });

    function showLoader() {
